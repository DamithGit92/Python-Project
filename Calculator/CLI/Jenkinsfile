pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: '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', url: 'https://github.com/DamithGit92/Python-Project.git']]])
            }
        }
        stage('Build') {
            steps {
                sh 'pip install -r Dockerfile'
                sh 'python Calculator/CLI/CliCalculator.py build'
            }
        }
    }
}

